<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp">
                    <ImageView
                        android:id="@+id/imageCheck"
                        android:layout_width="50dp"
                        android:src="@drawable/ic_check_of"
                        android:layout_height="50dp">

                    </ImageView>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:orientation="vertical">
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.Toolbar
                        android:id="@+id/idtolbar3"
                        app:subtitleTextAppearance="@style/Card.Subtitle"
                        app:titleTextAppearance="@style/Card.Title"
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        >
                        <TextView
                            android:fontFamily="@font/atma_medium"
                            android:id="@+id/idnmbresitems1"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="nombre">

                        </TextView>
                    </androidx.appcompat.widget.Toolbar>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                </LinearLayout>
                <TextView
                    android:text="apellido"
                    android:fontFamily="@font/atma_medium"
                    android:id="@+id/idapellidositems1"
                    android:textSize="16sp"

                    android:layout_marginLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:fontFamily="@font/atma_medium"
                        android:id="@+id/idedaditems1"
                        android:text="4"
                        android:textSize="15sp"
                        android:layout_marginLeft="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:fontFamily="@font/atma_medium"
                        android:layout_marginLeft="4sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textSize="16sp"
                        android:text="AÃ±os"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_gravity="right"
                    android:paddingHorizontal="8dp"
                    android:orientation="vertical"
                    android:background="@color/bgVerde"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imgcelular"

                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </ImageView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>